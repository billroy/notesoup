,\n\n\n\tquietDelete: function() {\n\t\tnotesoup.postRequest({\n\t\t\tmethod:\"sendnote\",\n\t\t\tparams:{\n\t\t\t\tnoteid: this.id,\n\t\t\t\tfromfolder: notesoup.foldername,\n\t\t\t\ttofolder: notesoup.username + '/trash',\n\t\t\t\tnotifyfolder: notesoup.foldername,\n\t\t\t\tdeleteoriginal: true\n\t\t\t}},{\n\t\t\trequestMessage: 'Message sent.',\n\t\t});\n\t},\n\n\n\tonrender: function() {\n\n\t\tvar messageForm = new Ext.form.Form({\n\t\t\tlabelWidth: 75,\n\t\t\thideLabels: false\n\t\t});\n\t\tmessageForm.add(\n\t\t\tnew Ext.form.TextArea({\n\t\t\t\tfieldLabel: ('sendCount' in this) && (this.sendCount > 1) ? 'Reply' : 'Message',\n\t\t\t\tname: 'msg',\n\t\t\t\twidth: this.width - 36 - 86\n\t\t}));\n\t\tmessageForm.addButton({\n\t\t\ttext: 'Send',\n\t\t\thandler: this.sendit,\n\t\t\tscope: this\n\t\t});\n\t\tmessageForm.addButton({\n\t\t\ttext: 'Done',\n\t\t\thandler: this.destroy,\n\t\t\tscope: this\n\t\t});\n\n\t\tvar o = [];\n\t\tif (this.msglog) {\n\t\t\to.push('<br/>');\n\t\t\to.push(this.msglog.reverse().join('<hr/>'));\n\t\t\to.push('<hr/>');\n\t\t}\n\t\tthis.setContentDiv(o.join(''));\n\t\tmessageForm.render(this.getContentDiv());\n\t\tthis.setEphemeral('messageForm', messageForm);\n\t}\n});\nnote.show();\n</script>\nloading...","yPos":47,"height":222,"bgcolor":"#99CCFF","notename":"Message Widget","mtime":1196983043.910553,"id":"notelcfNM8BF"}